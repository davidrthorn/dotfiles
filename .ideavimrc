set hlsearch
set number relativenumber
set surround

map <space> <leader>

" KJump
nmap , :action KJumpAction.Word0<CR>

" Split pane vertically
<leader>sp :action SplitVertically<CR>

" Semicolon for command  
nnoremap ; :

" Make Y behave like D and C
nnoremap Y y$

" Toggle relative numbering
nnoremap <leader>rn :set relativenumber!<CR>

" Replace current line with yanked one
nnoremap <leader>lp V"0p<CR>

" Add semi colon to end of line
nnoremap <leader>; $i;<esc>

" Comment line
nnoremap gcc :action CommentByLineComment<CR>

" Easy system copy paste
noremap <leader>y "*y
noremap <leader>Y "*y$
noremap <leader>p "*p
noremap <leader>P "*P

" Unwrap surrounding construct
noremap <leader>u :action Unwrap

" Turn highlight off after search
:nnoremap <CR> :nohlsearch<CR><CR>

